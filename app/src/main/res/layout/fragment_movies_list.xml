<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_background_color">

    <ProgressBar
        android:id="@+id/pb_movies_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/id_rv_movies_list"
        app:layout_constraintEnd_toEndOf="@+id/id_rv_movies_list"
        app:layout_constraintStart_toStartOf="@+id/id_rv_movies_list"
        app:layout_constraintTop_toTopOf="@+id/id_rv_movies_list" />

    <TextView
        android:id="@+id/tv_movies_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"
        android:text="@string/movies_list"
        android:textColor="@color/white"
        android:textSize="@dimen/space_4x"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/id_rv_movies_list"
        android:layout_width="0dp"
        android:layout_height="600dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_movies_list"
        app:spanCount="2"
        tools:itemCount="10"
        tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        tools:listitem="@layout/view_holder_movie" />


</androidx.constraintlayout.widget.ConstraintLayout>